{
  "name": "coffee-girl",
  "version": "1.0.0",
  "description": "Coffee Clicker game",
  "scripts": {
    "start": "http-server -p 8080 -c-1",
    "pretest": "test -d node_modules || npm ci && npm run lint",
    "test": "node test/test.js",
    "lint": "eslint -c eslint.config.js src/*.js test/*.js",
    "lint:syntax": "node -c src/main.js"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "eslint": "^9.29.0",
    "http-server": "^14.1.1",
    "pngjs": "^7.0.0",
    "puppeteer": "^24.10.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "globals": {
      "Phaser": "readonly"
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-unused-vars": "warn"
    }
  },
  "license": "MIT"
}
